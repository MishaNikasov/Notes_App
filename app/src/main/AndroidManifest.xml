<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="donnu.nikasov.notes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:screenOrientation="landscape"
        android:allowBackup="true"
        android:icon="@drawable/ic_event_note_white_48dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_event_note_white_48dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.EditNoteActivity"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".Activity.EditTagActivity"></activity>
    </application>

</manifest>